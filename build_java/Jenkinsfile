pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                dir("build_java") {
                    
                    echo "mvn clean compile test"
                }
            }
        }

        stage('Build Application') {
            steps {
                dir("build_java") {
                    sh "mvn -f pom.xml clean install -Dmaven.test.skip=true"
                    sh "tree"
                }
            }
        }

        stage('Create Docker Image') {
            steps {
                echo "Creating Docker image"
                // Aquí puedes agregar más pasos si es necesario
            }
        }
    }
}
